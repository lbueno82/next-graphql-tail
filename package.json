{
  "name": "next-graphql-tailwindcss",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build:nexus-typegen": "ts-node --transpile-only src/modules/graphql/schema.ts",
    "predev": "yarn run build:nexus-typegen && yarn run generate",
    "dev": "yarn predev && infisical run -- next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint --fix --ext .js,.mjs,.ts,.tsx,.jsx .",
    "generate": "graphql-codegen --config codegen.yml",
    "test": "vitest --config ./vitest.config.mts",
    "test:coverage": "vitest run --coverage --config ./vitest.config.mts",
    "migrate:dev": "infisical run -- ts-node ./scripts/migrations.ts \"migrate dev\""
  },
  "dependencies": {
    "@apollo/client": "^3.11.8",
    "@chakra-ui/icons": "^2.2.4",
    "@chakra-ui/react": "^2.10.1",
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@prisma/client": "5.20.0",
    "@types/cors": "^2.8.17",
    "apollo-server-micro": "^3.13.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "deepmerge": "^4.3.1",
    "formik": "^2.4.6",
    "framer-motion": "^11.11.1",
    "graphql": "^16.9.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "micro": "^10.0.1",
    "next": "14.2.14",
    "nexus": "^1.3.0",
    "nodemailer": "^6.9.15",
    "nookies": "^2.5.2",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "uuid": "^10.0.0",
    "yup": "^1.4.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.3",
    "@graphql-codegen/cli": "5.0.2",
    "@graphql-codegen/typescript": "4.0.9",
    "@graphql-codegen/typescript-operations": "4.2.3",
    "@graphql-codegen/typescript-react-apollo": "4.3.2",
    "@graphql-codegen/typescript-resolvers": "^4.2.1",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/lodash": "^4.17.10",
    "@types/node": "20.16.10",
    "@types/nodemailer": "^6.4.16",
    "@types/react": "18.3.11",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.2",
    "@vitest/coverage-v8": "^2.1.2",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.10",
    "prisma": "5.20.0",
    "tailwindcss": "^3.4.13",
    "ts-node": "^10.9.2",
    "typescript": "5.6.2",
    "vitest": "^2.1.2"
  },
  "prisma": {
    "schema": "src/modules/prisma/schema.prisma",
    "seed": "ts-node ./src/modules/prisma/seed.ts"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "npx prettier --write --ignore-unknown"
    ]
  }
}
